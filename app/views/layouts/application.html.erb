<!DOCTYPE html>
<!--suppress HtmlUnknownAttribute, HtmlUnknownTag -->
<html>
<head>
  <meta charset="utf-8">

  <%# Force IE to display the page using the highest mode possible, and prevent IE from using Compatibility Mode %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="description" content="Trackary">

  <title>Trackary</title>

  <%# favicon & social media images %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= favicon_link_tag 'apple-touch-icon-precomposed.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'social-media-logo.png', rel: 'image_src', type: 'image/png' %>

  <%# Include styles from 'application.css' and controller-specific styles %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%# Include javascripts from 'application.js' and controller-specific scripts %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%# Import the 'application' html component %>
  <%= html_import_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>

  <%# Google fonts %>
  <link href='https://fonts.googleapis.com/css?family=Wire+One' rel='stylesheet' type='text/css'>
</head>
<body unresolved touch-action="auto" fullbleed layout vertical>

  <%# Routes %>
  <app-router>
    <!-- matches an exact path -->
    <app-route path="/home" import="/pages/home-page.html"></app-route>

    <!-- matches using a wildcard -->
    <app-route path="/customer/*" import="/pages/customer-page.html"></app-route>

    <!-- matches using a path variable -->
    <app-route path="/order/:id" import="/pages/order-page.html"></app-route>

    <!-- matches a pattern like '/word/number' -->
    <app-route path="/^\/\w+\/\d+$/i" regex import="/pages/regex-page.html"></app-route>

    <!-- matches everything else -->
    <app-route path="*" import="/pages/not-found-page.html"></app-route>
  </app-router>

  <!--suppress HtmlUnknownAttribute, HtmlUnknownTag -->
  <core-scaffold>
    <core-header-panel navigation flex mode="seamed">
      <core-toolbar>Trackary</core-toolbar>
      <core-menu>
        <core-item icon="shopping-cart" label="Store"></core-item>
        <core-item icon="loyalty" label="Rewards"></core-item>
        <core-item icon="settings" label="Settings"></core-item>
      </core-menu>
    </core-header-panel>
    <div tool>Login</div>
  </core-scaffold>

  <%# Yield the content %>
  <%= yield %>

  <%# Google Analytics %>
  <% if false  # Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= Rails.configuration.ga_tracking_id %>', 'uofthacks.com');
      ga('require', 'displayfeatures');
      ga('require', 'linkid', 'linkid.js');
      ga('send', 'pageview');
    </script>
  <% end %>
</body>
</html>
