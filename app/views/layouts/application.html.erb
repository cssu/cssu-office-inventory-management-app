<!DOCTYPE html>
<!--suppress HtmlUnknownAttribute, HtmlUnknownTag -->
<html>
<head>
  <meta charset="utf-8">

  <%# Enable Add to Homescreen on Android %>
  <meta name="mobile-web-app-capable" content="yes">

  <%# Force IE to display the page using the highest mode possible, and prevent IE from using Compatibility Mode %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="description" content="Trackary">

  <title>Trackary</title>

  <%# favicon & social media images %>
  <%= tag 'link', rel: 'icon', href: image_path('favicon.ico') %>
  <%= tag 'link', rel: 'icon', sizes: '196x196`', href: image_path('android-icon.png') %>
  <%= tag 'link', rel: 'apple-touch-icon', sizes: '152x152', href: image_path('apple-touch-icon-precomposed.png') %>

  <%= tag 'link', rel: 'image_src', href: image_path('social-media-logo.png') %>

  <%# Include styles from 'application.css' and controller-specific styles %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%# Include javascripts from 'application.js' and controller-specific scripts %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%# Import the 'application' html component %>
  <%= html_import_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>

  <%# Google fonts %>
  <link href='https://fonts.googleapis.com/css?family=Wire+One' rel='stylesheet' type='text/css'>
</head>
<body unresolved touch-action="auto" fullbleed layout vertical>

  <%# Yield the content %>
  <%= yield %>

  <%# Google Analytics %>
  <% if false  # Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= Rails.configuration.ga_tracking_id %>', 'uofthacks.com');
      ga('require', 'displayfeatures');
      ga('require', 'linkid', 'linkid.js');
      ga('send', 'pageview');
    </script>
  <% end %>
</body>
</html>
